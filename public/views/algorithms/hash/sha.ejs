  boolean[][][] aA = new boolean[5][5][w];
  for (int x = 0; x < 5; x++) {
    for (int y = 0; y < 5; y++) {
      for (int z = 0; z < w; z++) aA[x][y][z] = A[(x + 3 * y) % 5][x][z];
