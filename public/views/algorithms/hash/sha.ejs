public static boolean roundConstant(int t) {
  if (t % 255 == 0) return true;
  // R verkörpert ein Byte mit Startwert 10000000
  boolean[] R = {true, false, false, false, false, false, false, false};
  for (int i = 0; i < t % 255; i++) {
