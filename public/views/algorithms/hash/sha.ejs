  boolean[] RC = new boolean[w];
  for (int j = 0; j <= l; j++) RC[(int)Math.pow(2, j) - 1] = roundConstant(j + 7 * i);
  for (int z = 0; z < w; z++) A[0][0][z] ^= RC[z];
  return A;
