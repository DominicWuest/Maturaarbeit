<!DOCTYPE html>
<!-- Dominic Wüst -->
<html>
  <head>
    <meta charset="utf-8">
    <link rel="shortcut icon" type="image/x-icon" href="/imgs/favicon.ico"/>
    <link rel="stylesheet" href=<%= "/styles/" + path + ".css" %>>
    <link href="https://fonts.googleapis.com/css?family=Press+Start+2P|Righteous" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js" type="text/javascript"></script>
    <script src=<%= "/js/" + path + ".js" %> type="text/javascript"></script>
    <script src="/js/codeHighlighting.js" type="text/javascript"></script>
    <script type="text/javascript">
      let htmlCourses = <%- JSON.stringify(htmlCourses) %>;
      const exercisesLength = htmlCourses["exercises"].length;
      const codeHighlighting = <%- JSON.stringify(codeHighlighting) %>;
    </script>
    <title>HTML</title>
  </head>
  <body onload="loaded(); setTextareaDimensions(); displayExercise(0);" onresize="setTextareaDimensions();">
    <%- include ../partials/header.ejs %>
    <main>
      <div class="exercise">
        <h1 class="sectionTitle">Aufgabe</h1>
        <div class="exerciseMain">
          <div id="exerciseTitle"></div>
          <div class="exercisesDropdown">
            <ul id="exercisesDropdownList"></ul>
          </div>
          <div id="exerciseText"></div>
        </div>
      </div>
      <div class="inputContainer">
        <h1 class="sectionTitle">Code</h1>
        <form class="input">
          <textarea id="textarea" oninput="document.getElementById('code').textContent = this.value; addHighlighting();" spellcheck="false" ></textarea>
          <code id="code" class="textareaContainer html">
          </code>
          <div class="buttons">
            <button type="button" name="run" onclick="runit();">Run</button><!-- Comment to prevent Whitespace
            --><div class="solutionButtonDiv"><button type="button" name="solution" onclick="showSolution();">Lösung</button></div><!-- Comment to prevent Whitespace
            --><button type="button" name="reset" onclick="resetSubexercise();">Reset</button>
          </div>
        </form>
      </div>
      <div class="output">
        <h1 class="sectionTitle">Output</h1>
        <div id="output"></div>
      </div>
    </main>
  </body>
</html>
